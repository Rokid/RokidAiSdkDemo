<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rokid.ai.sdkdemo.BspAudioActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/config_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/config_file_list" />

        <Button
            android:id="@+id/btn_server_start_stop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:onClick="onClick"
            android:text="启动服务"
            android:textSize="20px"/>

        <Button
            android:id="@+id/btn_other_pickup_open"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:onClick="onClick"
            android:text="开启拾音"
            android:textSize="20px" />

        <Button
            android:id="@+id/btn_other_pickup_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:onClick="onClick"
            android:text="关闭拾音"
            android:textSize="20px" />

        <Button
            android:id="@+id/btn_other_set_angle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:onClick="onClick"
            android:text="设置寻向角度"
            android:textSize="20px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="377dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/main_test_tv"
            android:layout_width="100px"
            android:layout_height="100px"
            android:gravity="center"
            android:textColor="#0066FF"
            android:textSize="20px" />

        <TextView
            android:id="@+id/main_total_state_tv"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#0066FF"
            android:textSize="20px" />

        <TextView
            android:id="@+id/main_file_state_tv"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#0066FF"
            android:textSize="20px" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_ast_pcm_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textColor="#0066FF"
        android:textSize="20px" />

    <TextView
        android:id="@+id/main_ast_activation_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textColor="#000000"
        android:textSize="20px" />


    <TextView
        android:id="@+id/main_ast_state_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textColor="#6200EE"
        android:textSize="14px" />

    <TextView
        android:id="@+id/main_ast_result_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:paddingLeft="20px"
        android:textColor="#ff4d4d"
        android:textSize="25px" />

    <TextView
        android:id="@+id/main_ast_npl_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="16px"
        android:textColor="#009900"
        android:textSize="14px" />

    <TextView
        android:id="@+id/main_ast_action_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="16px"
        android:textColor="#018786"
        android:textSize="14px" />

    <TextView
        android:id="@+id/main_ast_error_tv"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.5"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="15px" />

</LinearLayout>
