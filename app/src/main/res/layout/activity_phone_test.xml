<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rokid.ai.audiodemo.PhoneTestActivity">

    <Button
        android:id="@+id/btn_start_server_phone_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="开启服务"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_start_audio_phone_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="单麦开启录音"
        />

    <Button
        android:id="@+id/btn_double_start_audio_test"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="onClick"
        android:text="双麦开启录音"
        />

    <TextView
        android:id="@+id/tv_show_asr_audio_phone_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="hello"
        />

</LinearLayout>
